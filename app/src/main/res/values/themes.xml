<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.EasyCalling" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_1</item>
        <item name="colorPrimaryVariant">@color/blue_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_1</item>
        <item name="colorSecondaryVariant">@color/red_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/kopubm</item>
        <item name="android:textColor">@color/materialGray7</item>
    </style>

    <style name="selectButtonStyle" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">?attr/colorPrimaryVariant</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="numberPadStyle" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
    </style>

    <style name="callButton" parent="Widget.AppCompat.Button">
        <item name="colorPrimary">@color/materialGreen</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="Theme.EasyCalling.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.EasyCalling.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.EasyCalling.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>